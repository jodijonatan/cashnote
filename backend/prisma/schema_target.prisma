// Target Keuangan Model
model FinancialTarget {
  id        String   @id @default(cuid())
  userId    String
  title     String
  targetAmount Float
  currentAmount Float @default(0)
  category  String? // optional: "savings", "investment", "emergency_fund", dll
  deadline  DateTime? // target completion date
  status    String   @default("active") // active, completed, paused
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("financial_targets")
  @@index([userId])
  @@index([status])
}

// Update User model untuk include target
model User {
  id        String   @id @default(cuid())
  name      String?
  email     String   @unique
  password   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  transactions Transaction[]
  targets      FinancialTarget[]

  @@map("users")
}
