# Database Configuration (Get from Neon.tech or other PostgreSQL provider)
DATABASE_URL="postgresql://user:password@host.neon.tech/dbname?sslmode=require"

# Authentication
# JWT Secret - Generate a long random string for production
JWT_SECRET="your-super-secret-jwt-key-change-in-production"

# Google OAuth - Get from Google Cloud Console (https://console.cloud.google.com)
GOOGLE_CLIENT_ID="your-google-client-id.apps.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
# The callback MUST match your actual deployment URL or http://localhost:3000 during local dev
GOOGLE_CALLBACK_URL="https://your-project.vercel.app/api/auth/google/callback"

# Application URLs
# FRONTEND_URL is used by backend for redirects
FRONTEND_URL="https://your-project.vercel.app"
# NEXT_PUBLIC_API_URL can be set if API is on a different domain, usually "/" in Next.js
NEXT_PUBLIC_API_URL="/api"

# AI Integration
# Gemini AI - Get from Google AI Studio (https://aistudio.google.com)
GEMINI_API_KEY="your-gemini-api-key"
